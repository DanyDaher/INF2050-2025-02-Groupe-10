    /**
     * Cette méthode permet d'afficher les informations personnelles.
     * Aprés avoir entrer au préalable ces informations.
     */
    public void afficherInfosPersonnelles() {
        if (nom.isEmpty() || telephone.isEmpty() || email.isEmpty()) {
           nom= nom.replace(null, "Inconnu");
            telephone = telephone.replace(null, "Inconnu");
           email = email.replace(null, "Inconnu");

        }
        System.out.println("Nom :" + nom);
        System.out.println("Téléphone :" + telephone);
        System.out.println("Email :" + email);

    }
