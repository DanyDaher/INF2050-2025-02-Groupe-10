import java.util.Scanner;



public class Main {
    public static void main(String[] args) {

    Contact doctorBob = new Contact("Bob", "514 328 2855", "doctorbob@gmail.com", 700.55);

    Scanner scanValue = new Scanner(System.in);  // Create a Scanner object
    System.out.println("Enter method value to test:");
    int value = scanValue.nextInt();
   scanValue.nextLine();

    switch(value) {
          case 1:
            doctorBob.stealMoney(600.42, true);
            break;
          case 2:
            System.out.println("value: 2, Method: 2");
            break;
          case 3:
            doctorBob.showInfoWithGaps();
            break;
          case 4:
            doctorBob.NoWhitespaceBefore();
            break;
          case 5:
            doctorBob.LineLength();
            break;
          case 6:
            doctorBob.EmptyIfStmt(5);
            break;
        case 7:
        doctorBob.afficherInfosPersonnelles();
        break;
        case 8:
            System.out.println("Vous pouvez changez vos informations");
            Contact.changerInfosPersonnelles( scanValue);
            break;
        case 9:
           Contact.exit();
            break;
        case 10:
           Contact.ficheDeNotes(scanValue);
            break;
        case 11:
            Contact.changerMotDePasse(scanValue);
            break;
        default:
            System.out.println("Value: not between 1 and 22, Method: null");
            break;

        }
        scanValue.close();
    }


}


