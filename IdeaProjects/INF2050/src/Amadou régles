    //Correction
    public static void changerMotDePasse(Scanner scanValue) {
        System.out.println("Votre mot de passe de base au lancement est 0");
        try (Scanner scanner = new Scanner(System.in)) {

            int mot1passe = 0;
            System.out.println("Ecrivez votre mot de passe initial pour le changer (cela doit être un chiffre entre 0 et 99");
            int mot2passe = scanner.nextInt();
            if (mot1passe == mot2passe) {
                System.out.println("Vous pouvez changer votre mot de passe . Ecrivez le :");
                mot2passe = scanner.nextInt();
                mot1passe = mot2passe;
            }
        }
    }
